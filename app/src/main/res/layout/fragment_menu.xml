    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu Settings"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:fontFamily="@font/concert_one"
            android:textSize="19sp"/>
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/avatar"/>

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Loading..."
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/concert_one"
                android:layout_marginTop="5dp"/>
            
            <LinearLayout
                android:background="@drawable/background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:id="@+id/home_button_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/about_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/about_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/about_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

            </LinearLayout>

        <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/home_button_history"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/history_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_back_about"
                    android:padding="12dp"
                    android:src="@drawable/ic_baseline_history_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/history_icon"
                    android:fontFamily="@font/concert_one"
                    android:text="History"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_button_watchlist"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/watchlist_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_back_about"
                    android:padding="12dp"
                    android:src="@drawable/watchlist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/watchlist_icon"
                    android:fontFamily="@font/concert_one"
                    android:text="Watchlist"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/right_arrow" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_button_offlinevideos"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/download_icon"
                    android:src="@drawable/download"
                    android:background="@drawable/round_back_about"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/download_icon"
                    android:fontFamily="@font/concert_one"
                    android:text="Offline Videos"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="15dp">

            <RelativeLayout
                android:id="@+id/settings_button_changepassword"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/changePass_icon"
                    android:src="@drawable/change_password"
                    android:background="@drawable/round_back_about"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/changePass_icon"
                    android:fontFamily="@font/concert_one"
                    android:text="Change Password"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/settings_button_deleteaccount"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/deleteAcc_icon"
                    android:src="@drawable/delete_account"
                    android:background="@drawable/round_back_about"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/deleteAcc_icon"
                    android:fontFamily="@font/concert_one"
                    android:text="Delete Account"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_button_logout"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/logOut_icon"
                    android:src="@drawable/logout"
                    android:background="@drawable/round_back_about"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/logOut_icon"
                    android:fontFamily="@font/concert_one"
                    android:text="Log Out"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/right_arrow" />

            </RelativeLayout>

        </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>