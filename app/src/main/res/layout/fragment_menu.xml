<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="18dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="106dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:src="@drawable/avatar" />

            <TextView
                android:id="@+id/textview_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/concert_one"
                android:hint="Loading..."
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:id="@+id/home_button_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/about_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/about_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/about_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="About"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_button_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/bmi_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/bmi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/bmi_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Update BMI"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_button_weightGoal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/weightgoal_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/weight_goal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/weightgoal_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Update Weight Goal"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_button_healthRelated"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/healthRelated_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/health_related" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/healthRelated_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Update Health Conditions"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:id="@+id/home_button_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/history_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/ic_baseline_history_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/history_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="History"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_button_watchlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/watchlist_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/watchlist" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/watchlist_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Watchlist"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/right_arrow" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_button_offlinevideos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/download_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/download" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/download_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Offline Videos"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/background"
                android:orientation="vertical"
                android:padding="15dp">

                <RelativeLayout
                    android:id="@+id/settings_button_changepassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/changePass_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/change_password" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/changePass_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Change Password"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/settings_button_deleteaccount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/deleteAcc_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/delete_account" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/deleteAcc_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Delete Account"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/home_button_logout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/logOut_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12dp"
                        android:src="@drawable/logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/logOut_icon"
                        android:fontFamily="@font/concert_one"
                        android:text="Log Out"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="2dp"
                        android:src="@drawable/right_arrow" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>