    <!--        app:layout_constraintTop_toBottomOf="@+id/textView"-->
    <!--        app:strokeColor="@color/black"-->
    <!--        app:strokeWidth="10dp" />-->


    <ScrollView
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/menu_accountpanel"
        app:layout_constraintStart_toStartOf="@+id/menu_accountpanel"
        app:layout_constraintTop_toBottomOf="@+id/menu_accountpanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_button_history"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_login"
                android:fontFamily="@font/concert_one"
                android:text="History"
                android:textColor="@color/white"
                app:backgroundTint="#F4A022" />

            <Button
                android:id="@+id/home_button_watchlist"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:fontFamily="@font/concert_one"
                android:text="Watchlist"
                android:textColor="@color/white"
                app:backgroundTint="#F4A022" />

            <Button
                android:id="@+id/home_button_offlinevideos"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:fontFamily="@font/concert_one"
                android:text="Offline Videos"
                android:textColor="@color/white"
                app:backgroundTint="#F4A022" />

            <Button
                android:id="@+id/home_button_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:fontFamily="@font/concert_one"
                android:text="Settings"
                android:textColor="@color/white"
                app:backgroundTint="#F4A022" />

            <Button
                android:id="@+id/home_button_about"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:fontFamily="@font/concert_one"
                android:text="About"
                android:textColor="@color/white"
                app:backgroundTint="#F4A022" />

            <Button
                android:id="@+id/home_button_logout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:fontFamily="@font/concert_one"
                android:text="Log Out"
                android:textColor="@color/white"
                app:backgroundTint="#F4A022" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>